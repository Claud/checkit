{
    "name": "@claud/checkit",
    "version": "0.10.2",
    "description": "Simple validations for node and the browser.",
    "main": "index.js",
    "scripts": {
        "test": "mocha -R spec test/index.js",
        "prepublish": "npm test && npm run build",
        "build": "npm run build:main && npm run build:dist",
        "build:main": "webpack --output-library Checkit --output-library-target umd index.js dist/checkit.js",
        "build:dist": "webpack --output-library Checkit --output-library-target umd --optimize-minimize index.js dist/checkit.min.js",
        "precommit": "lint-staged",
        "eslint": "eslint",
        "eslint-fix": "eslint --fix",
        "format": "prettier --write \"{*.js,+(test|lang)/**/*.js}\""
    },
    "lint-staged": {
        "*.js": [
            "prettier --write",
            "git add"
        ]
    },
    "directories": {
        "test": "test"
    },
    "dependencies": {
        "inherits": "^2.0.1",
        "lodash": "^4.0.0"
    },
    "devDependencies": {
        "mocha": "~2.4.5",
        "node-uuid": "~1.4.1",
        "webpack": "1.12.13",
        "eslint": "^4.19.1",
        "eslint-config-google": "^0.9",
        "eslint-config-prettier": "^2.9.0",
        "eslint-plugin-prettier": "^2.6.0",
        "eslint-plugin-promise": "^3.7.0",
        "husky": "^0.14.3",
        "lint-staged": "^7.0.5",
        "prettier": "^1.12.1"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/tgriesser/checkit.git"
    },
    "keywords": [
        "validation"
    ],
    "contributors": [
        "Shiryaev Andrey <grabzila@gmail.com>"
    ],
    "author": {
        "name": "Tim Griesser",
        "web": "https://github.com/tgriesser"
    },
    "license": "MIT"
}
